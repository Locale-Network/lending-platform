// ============================================
// ZKFETCH LOGGING & AUDIT SYSTEM
// ============================================

// Store zkFetch proofs for audit trail, compliance, and dispute resolution
model ZkFetchProof {
  id String @id @default(cuid())

  // Link to loan
  loanId String @map("loan_id")
  loan   LoanApplication @relation(fields: [loanId], references: [id], onDelete: Cascade)

  // Borrower info
  borrowerAddress String @map("borrower_address") @db.VarChar(255)

  // Proof identifiers
  proofHash       String @unique @map("proof_hash") @db.VarChar(66)
  proofIdentifier String @map("proof_identifier") @db.VarChar(255)

  // Full proof data (JSON) - for disputes and verification
  proofData Json @map("proof_data")

  // Proof metadata
  provider        String? @db.VarChar(50) // e.g., "http"
  signaturesCount Int?    @map("signatures_count")

  // Timestamps
  createdAt  DateTime  @default(now()) @map("created_at")
  verifiedAt DateTime? @map("verified_at") // When proof was verified on-chain

  @@index([loanId])
  @@index([borrowerAddress])
  @@index([createdAt])
  @@map("zkfetch_proofs")
}

// Log all zkFetch operations for debugging and monitoring
model ZkFetchLog {
  id String @id @default(cuid())

  // Link to loan
  loanId String @map("loan_id")
  loan   LoanApplication @relation(fields: [loanId], references: [id], onDelete: Cascade)

  // Borrower info
  borrowerAddress String @map("borrower_address") @db.VarChar(255)

  // Operation details
  action          String  @db.VarChar(20) // sync, verify, submit, relay
  proofHash       String? @map("proof_hash") @db.VarChar(66)
  proofIdentifier String? @map("proof_identifier") @db.VarChar(255)
  success         Boolean @default(false)
  durationMs      Int?    @map("duration_ms")

  // Metadata
  transactionCount Int?    @map("transaction_count")
  dscrValue        Float?  @map("dscr_value")
  cartesiInputHash String? @map("cartesi_input_hash") @db.VarChar(66)

  // Error tracking
  errorMessage String? @map("error_message") @db.Text
  errorCode    String? @map("error_code") @db.VarChar(50)

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")

  @@index([loanId])
  @@index([borrowerAddress])
  @@index([action])
  @@index([success])
  @@index([createdAt])
  @@map("zkfetch_logs")
}

// ============================================
// PAYMENT PROCESSING (Circle ACH)
// ============================================

enum PaymentStatus {
  PENDING
  CONFIRMED
  PAID
  FAILED
}

enum PaymentProvider {
  CIRCLE
  MANUAL
}

// Track payment records from Circle ACH
model PaymentRecord {
  id String @id @default(cuid())

  // External payment tracking
  externalPaymentId String  @unique @map("external_payment_id") @db.VarChar(255)
  provider          PaymentProvider @default(CIRCLE)

  // Loan association
  loanApplicationId String          @map("loan_application_id")
  loanApplication   LoanApplication @relation(fields: [loanApplicationId], references: [id], onDelete: Cascade)

  // Payment details
  amount   Float
  currency String @default("USD") @db.VarChar(10)
  status   PaymentStatus @default(PENDING)

  // Timestamps for status transitions
  confirmedAt   DateTime? @map("confirmed_at")
  paidAt        DateTime? @map("paid_at")
  failedAt      DateTime? @map("failed_at")
  failureReason String?   @map("failure_reason") @db.Text

  // On-chain tracking (when repayment is recorded)
  onChainTxHash   String? @map("on_chain_tx_hash") @db.VarChar(66)
  onChainRecorded Boolean @default(false) @map("on_chain_recorded")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([loanApplicationId])
  @@index([status])
  @@index([createdAt])
  @@map("payment_records")
}

